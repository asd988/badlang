// for the documentation about the tasks.json format
{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "cargo build",
			"type": "shell",
			"command": "cargo build --bin lsp",
			"group": {
			  "kind": "build",
			  "isDefault": true
			},
			"dependsOn": [
				"prelaunch"
			]
		},
		{
			"label": "prelaunch",
			"type": "npm",
			"script": "watch",
			"problemMatcher": "$tsc-watch",
			"isBackground": true,
			"presentation": {
				"reveal": "never",
				"close": true
			},
			"group": {
				"kind": "build",
				"isDefault": true
			}	
		}
	]
}